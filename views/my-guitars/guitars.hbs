<div class='box max-width'>
  <h1>Your Collection</h1>
  <div class='guitars-grid'>
    {{#each myCollection}}
      <div class='guitar-card'>
        <h3>{{nickName}}</h3>
        <a href='/profile/guitar/{{id}}'><img src={{image}} alt='beauty-pic' /></a>
        <p>Brand: {{brand}}</p>
        <p>Model: {{model}}</p>
        <form action='/guitars/{{id}}/delete' method='POST'>
          <button class='button delete'>Delete</button>
        </form>
      </div>
    {{/each}}
  </div>
</div>