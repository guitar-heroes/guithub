<form class='box' action='/auth/signup' method='POST'>
  <h1>Log In</h1>
  {{#if errorMessage}}
    <p class='error'>{{errorMessage}}</p>
  {{/if}}
  <label>
    Username:
    <input class='text-input' type='text' name='username' />
  </label>
  <label>
    Password:
    <input class='text-input' type='password' name='password' />
  </label>

  <p>Don't have an account yet? Sign up <a href='/auth/signup'>here</a></p>

  <button class='button' type='submit'>Submit</button>
</form>